<%= form_for(resource, as: resource_name, url: new_session_path(resource_name)) do |f| %>
<div class="login popOver" style="margin-top: 200px">
  <div class="form">
    <h2>ĐĂNG NHẬP</h2>
    <%= f.email_field :email,placeholder: "Tài khoản (email: abc@gmail.com)" %>
    <%= f.password_field :password, placeholder: "Mật khẩu" %>
    <%= f.submit "Đăng nhập",value: "Đăng nhập", class: "submit" %>
    <!--<% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
    <% end %>-->
  </div>
</div>
<% end %>


